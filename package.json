    "type": "git"
  },
  "engines": {
    "node": "^6.8.0"
  },
  "devDependencies": {
    "babel-eslint": "6.1.2",
    "eslint": "3.5.0",
    "eslint-config-react-app": "^0.2.1",
    "eslint-plugin-flowtype": "2.18.1",
    "eslint-plugin-import": "1.12.0",
    "eslint-plugin-jsx-a11y": "2.2.2",
    "eslint-plugin-react": "^6.4.1",
    "nightmare": "^2.7.0",
    "node-sass": "^3.10.1",
    "react-scripts": "0.6.1"
  },
  "dependencies": {
    "d3": "3",
